{
  "name": "products",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-productsdata": "cds watch --open productsdata/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy products --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "private": true,
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/productsdata"
  ],
  "cds": {
    "requires": {
      "db": {
        "kind": "hana"
      },
      "[production]": {
        "auth": "xsuaa"
      },
      "html5-repo": true,
      "destinations": true,
      "workzone": true
    },
    "[development]": {
      "requires": {
        "db": {
          "kind": "sqlite",
          "credentials": {
            "database": "db.sqlite"
          }
        }
      }
    }
  }
}
