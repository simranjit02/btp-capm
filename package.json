{
  "name": "products",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-productsdata": "cds watch --open productsdata/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "private": true,
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/productsdata"
  ],
  "cds": {
    "requires": {
      "db": {
        "kind": "hana"
      }
    },
    "[development]": {
      "requires": {
        "db": {
          "kind": "sqlite",
          "credentials": {
            "database": "db.sqlite"
          }
        }
      }
    }
  }
}